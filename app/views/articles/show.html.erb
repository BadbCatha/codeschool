<h1>Article</h1>

<p>
	<strong>Title:</strong>
	<%= @article.title %>
</p>

<p>
	<strong>Text:</strong>
	<%= @article.text %>
</p>



<% @article.comments.each do |comment| %>
<p></p>

<p>
	<strong>Commenter:</strong>
	<%= comment.commenter %>
</p>

<p>
	<strong>Comment:</strong>
	<%= comment.body %>
</p>
<% end %>


<%= form_for(@article.comments.build) do |f| %>
 <%=f.hidden_field :article_id %> 
<%=render 'error_messsages'%>

<p>
  <b> <%=f.label :commenter %> </b>
  <%=f.text_field :commenter %> 
</p>

<p>
  <b> <%=f.label :body %> </b>
  <%=f.text_area :body %>
</p>

<p>
  <%=f.submit %>
</p>
<% end %>



<p> 
<h2><%= link_to 'Back', articles_path %></h2>
</p>
<p> 
<h5><%= link_to 'Edit', edit_article_path %></h5>
</p>
