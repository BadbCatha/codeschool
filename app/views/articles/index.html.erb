<h1>List of Articles </h1>
<p> 
<h2><%= link_to 'Write something new', new_article_path %></h2>
</p>
<%= form_tag articles_path, method: :get do %>
  <div class="input-group">
    <%= text_field_tag :q, params[:q], class: "form-control" %>
    <span class="input-group-btn">
      <%= submit_tag "Search", class: "btn btn-default" %>
    </span>
  </div>
<% end %>


</div>
	
<div class="list-group">

<% @articles.each do |article| %>
	<div class="list-group-item">
    	<h3 class="list-group-item-heading"><%= article.title %></h3>
       <p class="list-group-item-text"><b>Author:</b> <%= article.author %></p>

    	<p class="list-group-item-text"><%= article.text %></p>
     


    		<%= link_to 'Show', article_path(article), class: "btn btn-success" %> 


        <% if article.author == current_user %>
        <%= link_to 'Edit', edit_article_path(article), class: "btn btn-warning" %>
    		<%= link_to 'Delete', article_path(article), 
			method: :delete,
			data: {confirm: "Are you sure?"},
			class: "btn btn-danger"%>
      <% end %>
       <%= link_to 'Summary', summary_article_path(article), class: "btn btn-xs btn-primary summary", id: "summary-#{article.id}" %>


		


	</div>


<% end %>

<p>
	<h3><%= link_to 'Back', articles_path %></h3>
</p>





